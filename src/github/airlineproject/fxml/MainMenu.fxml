<AnchorPane id="AnchorPane" prefHeight="338.0" prefWidth="275.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="github.airlineproject.fxml.MainMenuController">
   <children>
      <VBox layoutX="44.0" layoutY="58.0" spacing="20.0">
         <children>
            <VBox fx:id="segment1" spacing="10.0">
               <children>
                  <Label text="Add Flight" textAlignment="CENTER">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#createFlight" text="Create Flight" />
                        <Region HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            <VBox fx:id="segment2" spacing="10.0">
               <children>
                  <Label text="Make Reservation" />
