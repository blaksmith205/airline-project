                  <HBox>
                     <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="reserveButton" disable="true" mnemonicParsing="false" onAction="#makeReservation" text="New Reservation" />
                        <Region HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  <HBox layoutX="10.0" layoutY="82.0">
                     <children>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="reserveButton2" disable="true" mnemonicParsing="false" onAction="#displaySeatMap" text="Display Seating" />
                        <Region HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <Label layoutX="44.0" layoutY="14.0" text="Airline Main Menu">
         <font>
            <Font name="Times New Roman" size="24.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
